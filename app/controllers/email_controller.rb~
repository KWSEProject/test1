class EmailController < ApplicationController
	def email_form
	end

	def email_send
		email = params[:email]
		name = params[:name]
		content = params[:content]
		radiobutton = params[:radiobutton{:id=cd-radio-1}]

		gmail = Gmail.connect("gguggu23@gmail.com","dlrkdud23")
		gmail.deliver do
			to email
			subject "From customer #{name}"
			text_part do
				body "#{radiobutton} : #{content}"
			end
		end

		gmail.logout
	end
end
