#encoding=utf-8
<div class="form-style-10">

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
         prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter User Details</legend>

  <div class="section">
   <div class="inner-wrap">
    <%= f.label :name, 'ID:'  %><br>
    <%= f.text_field :name, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :password, '비밀번호:' %><br>
    <%= f.password_field :password, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, '비밀확인:' %><br>
    <%= f.password_field :password_confirmation, size: 30 %>
  </div>



  <div class="field">
    <%= f.label :address1, 'Address:'  %><br>
    <%= f.text_field :address1, size: 50 %>
  </div>
  <div class="field">
    <%= f.label :phone_number, 'Phone:'  %><br>
    <%= f.text_field :phone_number, size: 15 %>
  </div>
  <div class="field">
    <%= f.label :e_mail, 'E-mail:'  %><br>
    <%= f.text_field :e_mail, size: 50 %>
  </div>
  <div class="field">
  	<%= f.label :birth_date, 'Birth date:' %><br>
	<%= f.text_field :birth_date, size: 15 %>
  </div>
  <div class = "field">
  	<%= f.radio_button :gender, '0'%>Male
	<%= f.radio_button :gender, '1'%>Female
  </div>
  <div class = "field">
  	<%= f.radio_button :rank, '0'%>Manager
	<%= f.radio_button :rank, '1'%>Saler
	<%= f.radio_button :rank, '2'%>Customer
  </div>





  <div class="actions">
    <%= f.submit %>
  </div>   
  </fieldset>
<% end %>

</div>
