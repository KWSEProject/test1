<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<% if @title != nil %>
	   <h1><%= @title %></h1>
<% else %>
	<% if @type == "Top" %>
	   <h1>Top</h1>
	<% end %>
	<% if @type == "Pant" %>
	   <h1>Pant</h1>
	<% end %>
	<% if @type == "ACC" %>
	   <h1>Accessory</h1>
	<% end %>
	<% if @type == "Shoes" %>
	   <h1>Shoes</h1>
	<% end %>
<% end %>

<% @products.each do |product| %>
	<% cache ['entry', product] do %>
		<div class="entry">
			<%= image_tag(product.main_image_url) %>
			<h2><a href="store/show/<%= product.product_id %>"> <%= product.main_title %> </a></h2>
			<h2><%= product.description %></h2>
			<div class="price_line">
				<span class="price"><%= number_to_currency(product.price) %></span>
			</div>
		</div>
	<% end %>
<% end %>

